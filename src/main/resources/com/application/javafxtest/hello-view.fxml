<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<AnchorPane fx:controller="com.application.javafxtest.HelloController" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2A2A2A;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox prefHeight="600.0" prefWidth="800.0">
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #FFFFFF; -fx-padding: 50;">
                <children>
                    <Label text="WELCOME BACK" style="-fx-font-size: 24px; -fx-text-fill: #000000;"/>
                    <Label text="Welcome back! Please enter your details." style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
                    <TextField promptText="Enter your email" prefWidth="300.0" style="-fx-padding: 10; -fx-background-radius: 5; -fx-background-color: #EFEFEF;"/>
                    <PasswordField promptText="Password" prefWidth="300.0" style="-fx-padding: 10; -fx-background-radius: 5; -fx-background-color: #EFEFEF;"/>
                    <HBox spacing="50.0">
                        <CheckBox text="Remember me"/>
                        <Hyperlink fx:id="forgotPassword" text="Forgot password?" style="-fx-text-fill: #FF0000;"/>
                    </HBox>
                    <Button fx:id="signIn" text="Sign in" style="-fx-background-color: #FF0000; -fx-text-fill: #FFFFFF; -fx-padding: 10 30 10 30; -fx-background-radius: 5;"/>
                    <Button text="Sign in with Google" style="-fx-background-color: #FFFFFF; -fx-text-fill: #000000; -fx-padding: 10 30 10 30; -fx-background-radius: 5; -fx-border-color: #DDDDDD;"/>
                    <HBox>
                        <Label text="Don't have an account?" style="-fx-text-fill: #666666;"/>
                        <Hyperlink text="Sign up for free!" style="-fx-text-fill: #FF0000;" fx:id="signUpLink" onAction="#initialize"/>
                    </HBox>
                </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #F5F5F5;">
                <children>
                    <ImageView fitWidth="400.0" fitHeight="600.0" preserveRatio="true" pickOnBounds="true">
                        <image>
                            <Image url="@/com/application/javafxtest/images/timehack.jpg"/>
                        </image>
                    </ImageView>
                </children>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
