<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.application.javafxtest.controller.login.ForgotPasswordController"
            prefHeight="400.0" prefWidth="600.0" styleClass="root">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" styleClass="login-box">
            <Label text="Forgot Password" styleClass="title-label"/>
            <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field"/>
            <Button fx:id="submitButton" text="Submit" styleClass="primary-button"/>
            <Button fx:id="backToLogin" text="Back to Login" styleClass="secondary-button"/>
        </VBox>
    </children>
</AnchorPane>
