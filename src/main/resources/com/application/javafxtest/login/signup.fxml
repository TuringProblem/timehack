<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.application.javafxtest.controller.login.SignUpController"
            prefHeight="600.0" prefWidth="800.0" styleClass="root">
    <children>
        <ToggleButton fx:id="themeToggle" text="☀️" styleClass="theme-toggle"
                      AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"/>
        <VBox alignment="CENTER" spacing="20.0" prefHeight="600.0" prefWidth="800.0" styleClass="signup-box">
            <Label text="Sign Up" styleClass="title-label"/>
            <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="text-field"/>
            <Button fx:id="signUpButton" text="Sign up" styleClass="primary-button"/>
            <Button fx:id="backToLoginButton" text="Back to Login" styleClass="secondary-button"/>
        </VBox>
    </children>
</AnchorPane>